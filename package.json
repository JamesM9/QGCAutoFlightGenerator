{
  "name": "uasfm-testing",
  "version": "1.0.0",
  "description": "Testing suite for UASFM (UAS Facility Maps) integration",
  "main": "uasfm.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest uasfm.test.js",
    "test:integration": "jest map.integration.test.js",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch"
  },
  "keywords": [
    "uasfm",
    "faa",
    "drone",
    "uav",
    "airspace",
    "testing",
    "jest",
    "leaflet"
  ],
  "author": "AutoFlightGenerator",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.0.0",
    "eslint": "^8.40.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-watch-typeahead": "^2.2.0",
    "jsdom": "^22.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "leaflet-draw": "^1.0.4",
    "@turf/turf": "^6.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "uasfm.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/autoflightgenerator/uasfm-testing.git"
  },
  "bugs": {
    "url": "https://github.com/autoflightgenerator/uasfm-testing/issues"
  },
  "homepage": "https://github.com/autoflightgenerator/uasfm-testing#readme"
}
